<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="kusior.ribbon.class">kusior\RibbonBundle\Ribbon\Ribbon</parameter>
    </parameters>
    <services>
        <service id="kusior.ribbon" class="%kusior.ribbon.class%" />
        <service id="kusior.menu_prepare.listener" class="%kusior_ribbon.listener_class%">
            <tag name="kernel.event_listener" event="kernel.controller" method="initializeRibbon" />
            <argument type="service" id="kusior.ribbon" />
            <argument type="service" id="security.context" />
        </service>
        <service id="twig.extension.ribbon" class="%kusior_ribbon.extension_class%" public="true">
            <argument type="service" id="kusior.ribbon" />
            <argument type="service" id="service_container" />
            <tag name="twig.extension" />
        </service>
    </services>
</container>
